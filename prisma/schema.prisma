// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
  }

model Store {
  id String @id @default(uuid())
  name String
  userId String
  billboards Billboard[] @relation("StoreToBillboard")
  categories Category[] @relation("StoreToCategory")
  bodyTypes BodyType[] @relation("StoreToBodyType")
  makes Make[] @relation("StoreToMake")
  colors Color[] @relation("StoreToColor")
  products Product[] @relation("StoreToProduct")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

   @@index([id])
}

model Billboard {
  id String @id @default(uuid())
  storeId String
  store Store @relation("StoreToBillboard", fields: [storeId], references: [id])
  label String
  imageUrl String
  categories Category[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
  @@index([label])
}

model Category {
  id String @id @default(uuid())
  storeId String
  store Store @relation("StoreToCategory", fields: [storeId], references: [id])
  billboardId String
  billboard Billboard @relation(fields: [billboardId], references: [id])
  products Product[] @relation("CategoryToProduct")
  name String @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
  @@index([billboardId])
  @@index([name])
}

model BodyType {
  id String @id @default(uuid())
  storeId String
  store Store @relation("StoreToBodyType", fields: [storeId], references: [id])
  products Product[] @relation("BodyTypeToProduct")
  label String @unique
  imageUrl String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
  @@index([label])
}
model Make {
  id String @id @default(uuid())
  storeId String
  store Store @relation("StoreToMake", fields: [storeId], references: [id], onDelete: Cascade)
  label String @unique
  models Model[] @relation("MakeToModel")
  products Product[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
  @@index([label])
}

model Model {
  id String @id @default(uuid())
  label String @unique
  products Product[]
  makeId String
  make Make @relation("MakeToModel",fields: [makeId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([makeId])
  @@index([label])

}
model Color {
  id String @id @default(uuid())
  storeId String
  store Store @relation("StoreToColor", fields: [storeId], references: [id])
  name String @unique
  value String @unique
  products Product[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
  @@index([name])
}


model Product {
  id String @id @default(uuid())
  storeId String
  store Store @relation("StoreToProduct", fields: [storeId], references: [id])
  categoryId String
  category Category @relation("CategoryToProduct", fields: [categoryId], references: [id])
  name String
  price Int
  mileage Int
  isFeatured Boolean @default(false)
  isArchived Boolean @default(false)
  bodyTypeId String
  bodyType BodyType @relation("BodyTypeToProduct", fields: [bodyTypeId], references: [id])
  makeId String
  make Make @relation(fields: [makeId], references: [id])
  modelId String
  model Model @relation(fields: [modelId], references: [id])
  colorId String
  color Color @relation(fields: [colorId], references: [id])
  year Int
  fuel FuelType
  gearbox GearboxType
  typeOfDrive TypeOfDriveOption
  images Image[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([storeId])
  @@index([categoryId])
  @@index([bodyTypeId])
  @@index([makeId])
  @@index([modelId])
  @@index([colorId])
  @@index([name])
}


model Image {
  id String @id @default(uuid())
  productId String
  product Product @relation(fields: [productId], references: [id], onDelete:Cascade)
  url String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
}

enum FuelType {
  DIESEL
  PETROL
  LPG
  LPG_PETROL
  GYBRID
  ELECTRIC
  HYDROGEN
}
enum GearboxType {
  AUTOMATIC
  MANUAL
}
enum TypeOfDriveOption {
  ALL_WD
  AWD
}

